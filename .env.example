# Background jobs / cron
CRON_SECRET=replace-with-cron-secret
REDIS_URL=redis://localhost:6379
IMPORT_WORKER_INTERVAL_MS=60000

# Local development helpers
ENABLE_BILLING_BYPASS=false
ALLOW_DEV_CREDENTIALS=false
