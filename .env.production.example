# Public URL of your deployed app
APP_DOMAIN=solarops.yourdomain.com
NEXTAUTH_URL=https://solarops.yourdomain.com

# TLS/Let's Encrypt contact email for Caddy
ACME_EMAIL=ops@yourdomain.com

# App secrets
NEXTAUTH_SECRET=replace-with-long-random-secret
CRON_SECRET=replace-with-long-random-secret
POSTGRES_PASSWORD=replace-with-strong-db-password

# SMTP for production reminders
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USER=smtp-user
SMTP_PASS=smtp-password
SMTP_FROM=notifications@yourdomain.com

# Optional (not active in MVP)
SMS_ENABLED=false
